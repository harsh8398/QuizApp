<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- default buttons -->
    <style name="DefaultButton" parent="Theme.AppCompat">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Dark Buttons -->
    <style name="DarkButton" parent="Theme.AppCompat">
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Rating Bar in Result -->
    <style name="RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <!-- Number Progress Bar Custom theme -->
    <style name="NumberProgressBar_Custom">
        <item name="progress_unreached_color">@color/light_gray</item>
        <item name="progress_reached_color">@color/colorAccent</item>
        <item name="progress_text_size">@dimen/small_text</item>
        <item name="progress_text_color">@color/colorAccent</item>

        <item name="progress_reached_bar_height">2dp</item>
        <item name="progress_unreached_bar_height">1.5dp</item>
    </style>

</resources>
